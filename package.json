{
  "private": true,
  "name": "hillcitymnag",
  "description": "Monorepo for https://www.hillcitymnag.church",
  "version": "2.0.0",
  "repository": "https://github.com/bmealhouse/hillcitymnag.git",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "echo \"lint-staged\"",
      "pre-push": "echo \"xo && yarn test\""
    }
  },
  "lint-staged": {
    "*.js": [
      "xo",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "verbose": true
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "renovate": {
    "automerge": true,
    "automergeType": "branch-push",
    "pinVersions": true,
    "schedule": [
      "every friday"
    ]
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "ignores": [
      "original-www/static/**"
    ],
    "prettier": true,
    "extends": "xo-react",
    "parser": "babel-eslint",
    "rules": {
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "@emotion/core": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "@emotion/styled-base": "^10.0.27",
    "@reach/skip-nav": "^0.7.0",
    "emotion": "^10.0.27",
    "emotion-server": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "gatsby": "^2.18.17",
    "gatsby-image": "^2.2.37",
    "gatsby-plugin-emotion": "^4.1.18",
    "gatsby-plugin-google-analytics": "^2.1.31",
    "gatsby-plugin-lodash": "^3.1.18",
    "gatsby-plugin-manifest": "^2.2.34",
    "gatsby-plugin-netlify": "^2.1.30",
    "gatsby-plugin-offline": "^3.0.30",
    "gatsby-plugin-react-helmet": "^3.1.18",
    "gatsby-plugin-sharp": "^2.3.10",
    "gatsby-plugin-sitemap": "^2.2.24",
    "gatsby-plugin-typography": "^2.3.20",
    "gatsby-source-prismic": "^2.2.0",
    "gatsby-transformer-sharp": "^2.3.9",
    "lodash": "^4.17.15",
    "prismic-dom": "^2.1.0",
    "prismjs": "^1.17.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-typography": "^0.16.19",
    "typeface-didact-gothic": "0.0.72",
    "typeface-fira-sans": "0.0.75",
    "typeface-lora": "0.0.72",
    "typeface-roboto": "0.0.75",
    "typeface-roboto-slab": "1.1.3",
    "typeface-source-sans-pro": "0.0.75",
    "typography": "0.16.19"
  },
  "devDependencies": {
    "@testing-library/cypress": "^5.0.2",
    "babel-eslint": "^10.0.3",
    "cross-env": "^6.0.3",
    "cypress": "^3.8.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-xo-react": "0.19.0",
    "eslint-plugin-cypress": "^2.8.1",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "gatsby-cypress": "^0.2.19",
    "husky": "2.3.0",
    "lint-staged": "8.1.7",
    "now": "15.3.0",
    "prettier": "^1.19.1",
    "start-server-and-test": "^1.10.6",
    "xo": "0.24.0"
  },
  "scripts": {
    "build": "gatsby build",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:ci": "cypress run --browser chrome --reporter junit --reporter-options 'mochaFile=results/cypress/result.xml'",
    "lint": "eslint . --ext .js,.jsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.jsx --fix --ignore-path .gitignore",
    "lint:ci": "yarn lint --format junit -o results/eslint/result.xml",
    "prefetch-data": "cd www && yarn prefetch-data",
    "dev": "gatsby develop",
    "format": "prettier --write \"**/*.js\"",
    "serve": "gatsby serve",
    "test": "echo todo",
    "test:e2e:dev": "cross-env CYPRESS_SUPPORT=y start-server-and-test dev http://localhost:8000 cy:open",
    "test:e2e:run": "cross-env CYPRESS_SUPPORT=y start-server-and-test develop http://localhost:8000 cy:run",
    "test:e2e:ci": "cross-env CYPRESS_SUPPORT=y start-server-and-test develop http://localhost:8000 cy:run:ci"
  }
}
