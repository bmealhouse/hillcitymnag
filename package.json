{
  "private": true,
  "name": "hillcitymnag",
  "description": "Monorepo for https://www.hillcitymnag.church",
  "version": "2.0.0",
  "repository": "https://github.com/bmealhouse/hillcitymnag.git",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "echo \"lint-staged\"",
      "pre-push": "echo \"xo && yarn test\""
    }
  },
  "lint-staged": {
    "*.js": [
      "xo",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "verbose": true
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "renovate": {
    "automerge": true,
    "automergeType": "branch-push",
    "pinVersions": true,
    "schedule": [
      "every friday"
    ]
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "ignores": [
      "original-www/static/**"
    ],
    "prettier": true,
    "extends": "xo-react",
    "parser": "babel-eslint",
    "rules": {
      "capitalized-comments": "off",
      "import/extensions": "off",
      "react/function-component-definition": "off",
      "react/no-danger": "off"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.28",
    "@fortawesome/free-solid-svg-icons": "5.13.0",
    "@fortawesome/react-fontawesome": "0.1.9",
    "@fullcalendar/core": "4.4.0",
    "@fullcalendar/daygrid": "4.4.0",
    "@fullcalendar/react": "4.4.0",
    "@reach/skip-nav": "0.10.0",
    "gatsby": "2.20.18",
    "gatsby-image": "2.3.2",
    "gatsby-plugin-google-analytics": "2.2.2",
    "gatsby-plugin-manifest": "2.3.3",
    "gatsby-plugin-offline": "3.1.2",
    "gatsby-plugin-react-helmet": "3.2.2",
    "gatsby-plugin-root-import": "2.0.5",
    "gatsby-plugin-sharp": "2.5.4",
    "gatsby-plugin-sitemap": "2.3.1",
    "gatsby-plugin-styled-components": "3.2.1",
    "gatsby-plugin-typography": "2.4.1",
    "gatsby-source-buzzsprout": "0.3.1",
    "gatsby-source-prismic": "2.2.0",
    "gatsby-transformer-sharp": "2.4.4",
    "prismic-dom": "2.1.0",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-helmet": "6.0.0",
    "react-is": "16.13.1",
    "react-typography": "0.16.19",
    "styled-components": "5.1.0",
    "tippy.js": "6.2.0",
    "typeface-roboto": "0.0.75",
    "typography": "0.16.19"
  },
  "devDependencies": {
    "@types/react": "16.9.34",
    "babel-eslint": "10.1.0",
    "babel-plugin-styled-components": "1.10.7",
    "cross-env": "7.0.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-config-xo-react": "0.23.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "husky": "4.2.5",
    "lint-staged": "10.1.3",
    "now": "17.1.1",
    "prettier": "2.0.4",
    "typescript": "3.8.3",
    "xo": "0.29.1"
  },
  "scripts": {
    "build": "gatsby build",
    "dev": "gatsby develop -o",
    "format": "prettier --write \"**/*.js\"",
    "lint": "xo"
  }
}
